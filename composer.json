{
    "name": "deveodk/core",
    "description": "Artistic api framework based on laravel",
    "keywords": ["framework", "laravel", "deveodk", "api", "bootstrap", "core"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7.1",
        "deveodk/core-component": "^0.0.*",
        "deveodk/core-exception": "^0.0.*",
        "deveodk/core-generator": "^0.0.*",
        "deveodk/core-localize": "^0.0.*",
        "deveodk/core-manager": "^0.0.*",
        "filp/whoops": "^2.1",
        "laravel/framework": "5.5.*",
        "laravel/tinker": "~1.0",
        "sentry/sentry": "^1.7"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.7"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "Api\\": "api/",
            "Integrations\\": "integrations/",
            "Infrastructure\\": "infrastructure/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
